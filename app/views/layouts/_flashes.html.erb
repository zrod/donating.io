<% if flash.any? %>
  <div class="container mx-auto px-5 pt-6">
    <div class="w-full max-w-6xl mx-auto">
      <% flash.each do |type, message| %>
        <%
          alert_type = case type.to_s
            when "notice" then "success"
            when "alert", "error" then "error"
            when "warning" then "warning"
            else "info"
          end
        %>
        <div class="alert alert-outline alert-soft alert-<%= alert_type %> mb-4">
          <span><%= message %></span>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
