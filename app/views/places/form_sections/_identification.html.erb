<fieldset class="card card-md card-border bg-white mb-6">
  <div class="card-body">
    <legend class="card-title text-2xl font-semibold mb-4">
      <%= I18n.t("views.places.form_sections.identification.title") %>
    </legend>

    <div class="form-control w-full mb-4">
      <%= form.label :name, I18n.t("views.places.form_sections.identification.location_name"), class: "label" %>
      <%= form.text_field :name,
            placeholder: I18n.t("views.places.form_sections.identification.location_name_placeholder"),
            required: true,
            class: "input input-bordered w-full" %>
    </div>

    <div class="form-control w-full mb-4">
      <%= form.label :description, I18n.t("views.places.form_sections.identification.description"), class: "label" %>
      <%= form.text_area :description,
            placeholder: I18n.t("views.places.form_sections.identification.description_placeholder"),
            required: true,
            class: "textarea textarea-bordered w-full h-32" %>
    </div>

    <div class="form-control w-full mb-6">
      <%= form.label :category_ids, I18n.t("views.places.form_sections.identification.categories"), class: "label" %>
      <div class="border border-base-300 rounded-lg bg-base-50 p-4">
        <div class="grid grid-cols-3 grid-flow-col-dense gap-3" style="grid-template-rows: repeat(6, minmax(0, 1fr));">
          <%= form.collection_check_boxes :category_ids, @categories.sort_by(&:name), :id, :name do |b| %>
            <div class="form-control">
              <label class="label cursor-pointer justify-start gap-3 p-2 rounded-lg hover:bg-base-100 transition-colors">
                <%= b.check_box(class: "checkbox checkbox-primary") %>
                <span class="label-text font-medium"><%= b.text %></span>
              </label>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <div class="space-y-4">
      <div class="form-control">
        <label class="label cursor-pointer justify-start gap-3">
          <%= form.check_box :used_ok, class: "toggle toggle-sm" %>
          <span class="label-text font-medium">
            <%= I18n.t("views.places.form_sections.identification.accepts_used_items") %>
          </span>
        </label>
      </div>

      <div class="form-control">
        <label class="label cursor-pointer justify-start gap-3">
          <%= form.check_box :is_bin, class: "toggle toggle-sm" %>
          <span class="label-text font-medium">
            <%= I18n.t("views.places.form_sections.identification.is_donation_bin") %>
          </span>
          <%= render 'shared/info_tooltip', tooltip_text: I18n.t('views.places.form_sections.identification.is_donation_bin_tooltip') %>
        </label>
      </div>

      <div class="form-control">
        <label class="label cursor-pointer justify-start gap-3">
          <%= form.check_box :pickup, class: "toggle toggle-sm" %>
          <span class="label-text font-medium">
            <%= I18n.t("views.places.form_sections.identification.pickup_available") %>
          </span>
        </label>
      </div>
    </div>
  </div>
</fieldset>
