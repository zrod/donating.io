<fieldset class="card card-md card-border bg-white mb-6">
  <div class="card-body">
    <legend class="card-title text-2xl font-semibold mb-4">
      <%= I18n.t("views.places.form_sections.location.title") %>
    </legend>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
      <div class="form-control w-full">
        <%= form.label :address, I18n.t("views.places.form_sections.location.address"), class: "label" %>
        <%= form.text_field :address,
              placeholder: I18n.t("views.places.form_sections.location.address_placeholder"),
              required: true,
              class: "input input-bordered w-full" %>
      </div>

      <div class="form-control w-full">
        <%= form.label :postal_code, I18n.t("views.places.form_sections.location.postal_code"), class: "label" %>
        <%= form.text_field :postal_code,
              placeholder: I18n.t("views.places.form_sections.location.postal_code_placeholder"),
              class: "input input-bordered w-full" %>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
      <div class="form-control w-full">
        <%= form.label :city, I18n.t("views.places.form_sections.location.city"), class: "label" %>
        <%= form.text_field :city,
              placeholder: I18n.t("views.places.form_sections.location.city_placeholder"),
              required: true,
              class: "input input-bordered w-full" %>
      </div>

      <div class="form-control w-full">
        <%= form.label :region, I18n.t("views.places.form_sections.location.region"), class: "label" %>
        <%= form.text_field :region,
              placeholder: I18n.t("views.places.form_sections.location.region_placeholder"),
              class: "input input-bordered w-full" %>
      </div>
    </div>

    <%= render "shared/forms/countries_dropdown", form:, selected_country_id: @place.country_id %>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-4">
      <div class="form-control w-full">
        <%= form.label :lat, I18n.t("views.places.form_sections.location.latitude"), class: "label" %>
        <%= form.number_field :lat,
              step: :any,
              placeholder: I18n.t("views.places.form_sections.location.latitude_placeholder"),
              required: true,
              class: "input input-bordered w-full" %>
      </div>

      <div class="form-control w-full">
        <%= form.label :lng, I18n.t("views.places.form_sections.location.longitude"), class: "label" %>
        <%= form.number_field :lng,
              step: :any,
              placeholder: I18n.t("views.places.form_sections.location.longitude_placeholder"),
              required: true,
              class: "input input-bordered w-full" %>
      </div>

      <div class="md:col-span-2">
        <div class="label block">
          <span class="label-text-alt text-info break-words">
            <%= I18n.t("views.places.form_sections.location.coordinates_help") %>
          </span>
        </div>
      </div>
    </div>
  </div>
</fieldset>
