<% content_for :title, I18n.t("views.sessions.new.login_title") %>

<div class="w-full max-w-2xl">
  <h1 class="text-5xl font-semibold text-primary mb-6">
    <%= I18n.t("views.sessions.new.login_title") %>
  </h1>

  <p class="text-lg text-base-content mb-6">
    <%= I18n.t("views.sessions.new.subheader", signup_link: link_to(I18n.t("views.users.new.create_account_title"), new_user_path, class: "link link-primary")).html_safe %>
  </p>

  <%= form_with url: session_path do |form| %>
    <div class="mb-4">
      <%= form.email_field :email_address,
        class: "input input-bordered w-full text-lg",
        required: true,
        autofocus: true,
        autocomplete: "username",
        placeholder: I18n.t("views.sessions.new.email_address_placeholder"),
        value: params[:email_address] %>
    </div>

    <div class="mb-4">
      <%= form.password_field :password,
        class: "input input-bordered w-full text-lg",
        required: true,
        autocomplete: "current-password",
        placeholder: I18n.t("views.sessions.new.password_placeholder"),
        maxlength: 72 %>
    </div>

    <%= form.submit I18n.t("views.sessions.new.login_button"), class: "btn btn-neutral text-lg mt-2" %>
  <% end %>

  <div class="mt-4">
    <%= link_to I18n.t("views.sessions.new.forgot_password_link"), new_password_path, class: "link link-primary text-lg" %>
  </div>
</div>
